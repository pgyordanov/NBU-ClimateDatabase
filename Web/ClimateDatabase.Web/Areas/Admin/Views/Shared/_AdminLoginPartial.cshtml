@using ClimateDatabase.Data.Models
@inject UserManager<ApplicationUser> UserManager

<form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
    <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                @this.UserManager.GetUserName(this.User)
                <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
                <li><a asp-area="" asp-controller="Home" asp-action="Index" title="To front">To front</a></li>
                <li role="separator" class="divider"></li>
                <li><button type="submit" class="btn-link">Logout</button></li>
            </ul>
        </li>
    </ul>
</form>

